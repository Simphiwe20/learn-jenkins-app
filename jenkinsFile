pipeline {
    agent any

    stages {
        stage('npm install') {
            agent {
                docker {
                  image 'node:18-alpine' 
                  reuseNode true  
                }
            }
            steps {
              sh '''
                    ls -al
                    npm --version
                    node --version
                    npm ci
                    npm run build
                    ls -al
                '''
            }
        }
    }
}
